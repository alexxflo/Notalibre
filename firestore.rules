rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PERFIL DE USUARIOS: Cualquiera puede buscar a otros, pero solo el dueño edita
    match /users/{userId} {
      allow read: if request.auth != null; // Permite que cualquier logueado busque perfiles
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // CHATS: Solo los participantes pueden ver o escribir
    match /chats/{chatId} {
      // Permite leer/escribir SOLO si el UID del usuario está en la lista de participantes
      allow read, update, delete: if request.auth != null && 
        request.auth.uid in resource.data.participantIds;
      
      // Permite crear un chat si el usuario que lo crea se incluye a sí mismo en los participantes
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participantIds;

      // MENSAJES: Solo si tienes acceso al chat padre
      match /messages/{messageId} {
        allow read, write: if request.auth != null && 
          exists(/databases/$(database)/documents/chats/$(chatId)) &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
      }
    }
  }
}
