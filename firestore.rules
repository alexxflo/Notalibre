rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Perfiles de usuario son de lectura pública para que la app pueda cargar datos.
      allow read: if true;
      // Solo el dueño de la cuenta puede crear, modificar o borrar su propio perfil.
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Subcolecciones de notificaciones y mensajes son privadas para el usuario.
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /posts/{postId} {
      // Cualquiera puede leer publicaciones y comentarios.
      allow read: if true;
      
      // Para escribir (crear, editar, borrar) publicaciones o comentarios,
      // el usuario debe estar autenticado.
      // Reglas más específicas se pueden añadir aquí después.
      allow write: if request.auth != null;

      match /comments/{commentId} {
          allow read: if true;
          allow write: if request.auth != null;
      }
    }
    
    // Cualquiera autenticado puede leer/escribir en estas colecciones por ahora.
    match /campaigns/{campaignId} {
      allow read, write: if request.auth != null;
    }
    
    match /purchase_verifications/{verificationId} {
      allow read, write: if request.auth != null;
    }
    
    match /stats/{docId=**} {
      allow read, write: if request.auth != null;
    }
  }
}
