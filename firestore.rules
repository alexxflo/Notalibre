rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default rule: Logged-in users can read/write.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // --- Bot Access (Unauthenticated) ---
    // WARNING: This allows any server process that can reach Firestore to perform these actions.
    // It is critical that your webhook endpoint is secured.
    
    // Allow bot to read any verification and update its status
    match /purchase_verifications/{verificationId} {
        allow get: if request.auth == null;
        // Allow updating status and adding completion data
        allow update: if request.auth == null && resource.data.status == 'pending';
    }
    
    // Allow bot to read user profiles
    match /users/{userId} {
        allow get: if request.auth == null;

        // Allow bot to update a user's coin balance, but nothing else.
        // This rule verifies that all other fields remain unchanged.
        allow update: if request.auth == null
                      && request.resource.data.username == resource.data.username
                      && request.resource.data.email == resource.data.email
                      && request.resource.data.avatarUrl == resource.data.avatarUrl
                      && request.resource.data.gatekeeperPassed == resource.data.gatekeeperPassed;
    }
  }
}
