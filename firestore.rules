rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // User profiles are publicly readable.
      // Only the owner can write to their own profile.
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Notifications are private to the user.
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Private messages for a user.
      match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Posts and their comments are publicly readable.
    match /posts/{postId} {
      allow read: if true;
      
      // Creating a post requires authentication and matching user ID.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Anyone authenticated can update (for likes/comments), but only the owner can delete.
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /posts/{postId}/comments/{commentId} {
        allow read: if true;
        // Any authenticated user can create a comment.
        allow create: if request.auth != null;
    }

    // Campaigns require authentication.
    match /campaigns/{campaignId} {
      allow read, write: if request.auth != null;
    }
    
    // Purchase verifications require authentication.
    match /purchase_verifications/{verificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Stats require authentication.
    match /stats/{docId=**} {
      allow read, write: if request.auth != null;
    }
  }
}
