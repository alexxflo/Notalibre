rules_version = '2';

function isAdmin() {
  return request.auth.uid == 'cgjnVXgaoVWFJfSwu4r1UAbZHbf1';
}

service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Collection/Document Rules ---
    match /users/{userId} {
      // Allow any authenticated user to list users for the F/F feature.
      allow list: if request.auth != null;
      
      // Admin can get any user profile and write to it.
      allow get, write: if isAdmin();

      // A user can get and write to their own profile (but not others)
      allow get, write: if request.auth.uid == userId;

      // The unauthenticated bot can read any user profile for processing
      allow get: if request.auth == null;
      
      // The unauthenticated bot can update a user's coin balance, but nothing else.
      allow update: if request.auth == null
                    && request.resource.data.username == resource.data.username
                    && request.resource.data.email == resource.data.email
                    && request.resource.data.avatarUrl == resource.data.avatarUrl
                    && request.resource.data.gatekeeperPassed == resource.data.gatekeeperPassed;
    }

    // --- Campaign Rules ---
    match /campaigns/{campaignId} {
        // Any logged-in user can read campaigns
        allow read: if request.auth != null;
        // A user can create a campaign for themselves
        allow create: if request.auth.uid == request.resource.data.userId;
        // Any authenticated user can delete (claim) a campaign. This allows
        // the "follow-to-earn" feature to work, as the user who follows
        // is the one who deletes the campaign document.
        allow delete: if request.auth != null;
    }

    // --- Purchase Verification Rules ---
    match /purchase_verifications/{verificationId} {
        // Authenticated users can create their own verification requests
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        
        // The unauthenticated bot can read any verification
        allow get: if request.auth == null;
        
        // The unauthenticated bot can update the status of a pending verification
        allow update: if request.auth == null && resource.data.status == 'pending';
    }

    // --- Stats Rules ---
    match /stats/{statId} {
      // Any authenticated user can read stats
      allow read: if request.auth != null;
      // Allow the client to increment the user count upon sign-up.
      allow create, update: if request.auth != null;
    }

    // --- Chat Rules ---
    match /messages/{messageId} {
        // Any authenticated user can read the chat history
        allow read: if request.auth != null;
        // Any authenticated user can send a message, but they must be the author
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // --- Vortex-Flog Rules ---
    match /flogs/{userId} {
      // Any authenticated user can read any flog profile
      allow read: if request.auth != null;
      
      // A user can create or delete their OWN flog profile
      allow create, delete: if request.auth.uid == userId;
      
      // The owner can update any field on their OWN profile
      allow update: if request.auth.uid == userId;
      
      // Any other authenticated user can update ONLY the likes/dislikes fields
      allow update: if request.auth != null
                    && request.auth.uid != userId
                    && request.resource.data.description == resource.data.description
                    && request.resource.data.mainPhotoUrl == resource.data.mainPhotoUrl
                    && request.resource.data.lastPhotoUpdate == resource.data.lastPhotoUpdate
                    && request.resource.data.themeColor == resource.data.themeColor;
    }
    
    match /flogs/{userId}/signatures/{signatureId} {
      // Any authenticated user can read signatures
      allow list, read: if request.auth != null;

      // Any authenticated user can write a signature on any flog
      allow create: if request.auth != null
                    && request.resource.data.authorId == request.auth.uid;

      // The Flog's owner can delete signatures on their own wall
      allow delete: if request.auth.uid == userId;
    }
  }
}
