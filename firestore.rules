rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // REGLAS DE USUARIO Y NOTIFICACIONES
    match /users/{userId} {
      // Cualquier usuario logueado puede leer perfiles (para buscar y chatear)
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // REGLA PARA NOTIFICACIONES (Lo que te est√° fallando ahora)
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // REGLAS PARA CHATS
    match /chats/{chatId} {
      // Solo participantes pueden leer o actualizar el chat
      allow read, update, delete: if request.auth != null && 
        request.auth.uid in resource.data.participantIds;
      
      // Permite crear si el usuario es uno de los participantes
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participantIds;

      // MENSAJES DENTRO DEL CHAT
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
