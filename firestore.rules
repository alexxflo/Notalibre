rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. PUBLICACIONES (POSTS): Cualquiera logueado puede verlas, solo el autor crea/edita
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.authorId == request.auth.uid || resource.data.userId == request.auth.uid);
    }
    
    // 2. USUARIOS Y SUS SUB-COLECCIONES
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Notificaciones, Mensajes internos y Seguidores
      match /notifications/{id} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /messages/{id} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /followers/{id} { allow read, write: if request.auth != null; }
      match /following/{id} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    // REGLAS PARA CHATS CORREGIDAS
    match /chats/{chatId} {
      // Permite 'list' (consultas/queries) si el usuario está logueado
      // Esto permite que el buscador verifique si el chat ya existe
      allow list: if request.auth != null;
      
      // Permite leer el documento individual si es participante
      allow get: if request.auth != null && 
        request.auth.uid in resource.data.participantIds;
      
      // Permite crear el chat inicial
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participantIds;

      // Permite actualizar mensajes o el último mensaje enviado
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participantIds;

      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
