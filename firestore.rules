rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Esta regla global permite el acceso de lectura y escritura a cualquier usuario autenticado
    // en todas las colecciones y subcolecciones.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
  }
}
