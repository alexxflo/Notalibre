rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /chats/{chatId} {
      // PERMITIR BUSCAR: Necesario para que el buscador verifique si el chat existe.
      // Firebase solo permitirá el 'list' si tu consulta en el código tiene un filtro .where()
      allow list: if request.auth != null;

      // PERMITIR LEER: Solo si eres parte del chat.
      allow get: if request.auth != null && 
        request.auth.uid in resource.data.participantIds;

      // PERMITIR CREAR: Permite crear el chat si el usuario logueado está en la lista de participantes.
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participantIds;

      // PERMITIR ACTUALIZAR: Para enviar mensajes nuevos (actualiza lastMessage, etc.)
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participantIds;

      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Regla de usuarios (necesaria para que el buscador encuentre al otro usuario)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}