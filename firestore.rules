rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default rule: Logged-in users can read/write.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // --- Bot Access (Unauthenticated) ---
    // WARNING: This allows any server process that can reach Firestore to perform these actions.
    // It is critical that your webhook endpoint is secured.
    
    // Allow bot to read any verification and update its status
    match /purchase_verifications/{verificationId} {
        allow get, update: if request.auth == null;
    }
    // Allow bot to read any user and update their coin balance
    match /users/{userId} {
        allow get: if request.auth == null;
        allow update: if request.auth == null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['coinBalance']);
    }
  }
}
