rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Los perfiles de usuario son de lectura pública para que cualquiera pueda verlos.
      allow read: if true;
      
      // Solo el dueño puede crear o borrar su perfil.
      allow create, delete: if request.auth != null && request.auth.uid == userId;
      
      // Cualquier usuario autenticado puede actualizar un perfil (necesario para la función de "seguir").
      allow update: if request.auth != null;
      
      // Subcolecciones de notificaciones y mensajes son privadas para el usuario.
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /posts/{postId} {
      // Cualquiera puede leer publicaciones y comentarios.
      allow read: if true;
      
      // Para escribir (crear, editar, borrar) publicaciones o comentarios,
      // el usuario debe estar autenticado.
      allow write: if request.auth != null;

      match /comments/{commentId} {
          allow read: if true;
          allow write: if request.auth != null;
      }
    }
    
    // Cualquiera autenticado puede leer/escribir en estas colecciones por ahora.
    match /campaigns/{campaignId} {
      allow read, write: if request.auth != null;
    }
    
    match /purchase_verifications/{verificationId} {
      allow read, write: if request.auth != null;
    }
    
    match /stats/{docId=**} {
      allow read, write: if request.auth != null;
    }
  }
}
