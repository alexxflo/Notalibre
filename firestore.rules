rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PERFIL DE USUARIO Y SUS SUB-COLECCIONES
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Regla universal para cualquier subcolecci√≥n dentro de un usuario
      // Esto cubre /notifications, /messages, /settings, etc.
      match /{allSubcollections=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // REGLAS PARA CHATS GLOBALES
    match /chats/{chatId} {
      // Permitimos listar para que el buscador pueda encontrar chats existentes
      allow list: if request.auth != null;
      
      // Permitimos leer y actualizar si eres participante
      allow get, update: if request.auth != null && 
        request.auth.uid in resource.data.participantIds;
      
      // Permitimos crear un chat si te incluyes como participante
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participantIds;

      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // REGLA PARA POSTS
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.authorId == request.auth.uid || resource.data.userId == request.auth.uid);
    }
  }
}
