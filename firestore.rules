rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if a user is a participant in a chat
    function isChatParticipant(chatId) {
      return request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
    }

    match /users/{userId} {
      // Cualquiera puede leer un perfil de usuario.
      allow read: if true;
      
      // Solo el dueño puede crear o borrar su perfil.
      allow create, delete: if request.auth != null && request.auth.uid == userId;
      
      // Cualquier usuario autenticado puede actualizar un perfil (necesario para la función de "seguir").
      allow update: if request.auth != null;
      
      match /notifications/{notificationId} {
        // El dueño puede leer, actualizar y borrar sus propias notificaciones.
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
        // Cualquier usuario autenticado puede crear una notificación (ej. para un nuevo seguidor).
        allow create: if request.auth != null;
      }
      match /messages/{messageId} {
          // Solo el dueño puede leer y escribir sus mensajes privados de soporte.
          allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /posts/{postId} {
      // Cualquiera puede leer publicaciones y comentarios.
      allow read: if true;
      
      // Para escribir (crear, editar, borrar) publicaciones o comentarios,
      // el usuario debe estar autenticado.
      allow write: if request.auth != null;

      match /comments/{commentId} {
          allow read: if true;
          allow write: if request.auth != null;
      }
    }

    match /chats/{chatId} {
      // Un usuario autenticado puede leer un chat si es participante.
      allow get: if request.auth != null && request.auth.uid in resource.data.participantIds;
      // Un usuario autenticado puede listar los chats (la app filtra por sus propios chats).
      allow list: if request.auth != null;
      // Solo los participantes pueden actualizar los metadatos del chat (ej. lastMessage)
      allow update: if request.auth != null && request.auth.uid in resource.data.participantIds;
      // Cualquiera puede crear un nuevo chat, siempre que se incluya a sí mismo.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;

      match /messages/{messageId} {
        // Solo los participantes del chat pueden leer y escribir mensajes.
        allow read, write: if request.auth != null && isChatParticipant(chatId);
      }
    }
    
    // Cualquiera autenticado puede leer/escribir en estas colecciones por ahora.
    match /campaigns/{campaignId} {
      allow read, write: if request.auth != null;
    }
    
    match /purchase_verifications/{verificationId} {
      allow read, write: if request.auth != null;
    }
    
    match /stats/{docId=**} {
      allow read, write: if request.auth != null;
    }
  }
}
