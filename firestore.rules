rules_version = '2';

function isAdmin() {
  return request.auth.uid == 'cgjnVXgaoVWFJfSwu4r1UAbZHbf1';
}

// Function to check if the requesting user's profile exists and they are blocked
function isUserBlocked() {
    // This function should only be used in write rules to avoid read-after-write issues.
    if (!exists(/databases/$(database)/documents/users/$(request.auth.uid))) {
      return false; // A user without a profile is not considered blocked.
    }
    // Safely access the isBlocked field, defaulting to 'false' if it's missing.
    return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('isBlocked', false) == true;
}

// Function to check if the user is authenticated and not blocked
function isNotBlocked() {
    // Check if auth exists and then check if the user is not blocked.
    return request.auth != null && isUserBlocked() == false;
}

service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Collection/Document Rules ---
    match /users/{userId} {
      // Any authenticated user can read profiles. Write access is handled below.
      allow list, get: if request.auth != null;
      
      // Users can create/update their own document if they are not blocked. Admins can write anything.
      allow write: if isAdmin() || (isNotBlocked() && request.auth.uid == userId);
      
      // Allow a user to follow/unfollow another user by modifying the 'followers' array, if not blocked.
      allow update: if isNotBlocked() && request.auth.uid != userId &&
                      (
                        (request.resource.data.followers.diff(resource.data.followers).addedKeys().hasOnly([request.auth.uid]) &&
                         request.resource.data.followers.diff(resource.data.followers).removedKeys().size() == 0) ||
                        (request.resource.data.followers.diff(resource.data.followers).removedKeys().hasOnly([request.auth.uid]) &&
                         request.resource.data.followers.diff(resource.data.followers).addedKeys().size() == 0)
                      );
    }
    
    // --- Post Collection Rules ---
    match /posts/{postId} {
      // Any authenticated user can read posts. Blocked users are restricted by write rules.
      allow list, get: if request.auth != null;
      
      // Users can create posts for themselves if they are not blocked.
      allow create: if isNotBlocked() && request.auth.uid == request.resource.data.userId;
      
      // Allow users to delete their own posts if they are not blocked.
      allow delete: if isNotBlocked() && resource.data.userId == request.auth.uid;
      
      // Allow post author to edit their post (if not blocked), or any non-blocked user to update likes.
      allow update: if (isNotBlocked() && resource.data.userId == request.auth.uid) ||
                      (isNotBlocked() && request.resource.data.keys().hasOnly(['likes']));
    }

    // --- Comment Sub-collection Rules ---
    match /posts/{postId}/comments/{commentId} {
      // Any authenticated user can read comments.
      allow list, get: if request.auth != null;
      
      // Users can create comments for themselves if not blocked.
      allow create: if isNotBlocked() && request.auth.uid == request.resource.data.userId;
      
      // Allow comment author or post author to delete comments if they are not blocked.
      allow delete: if isNotBlocked() && (request.auth.uid == resource.data.userId || request.auth.uid == get(/databases/$(database)/documents/posts/$(postId)).data.userId);
    }


    // --- Campaign Rules ---
    match /campaigns/{campaignId} {
        // Any logged-in user can read campaigns.
        allow list, get: if request.auth != null;
        // A user can create a campaign for themselves if not blocked.
        allow create: if isNotBlocked() && request.auth.uid == request.resource.data.userId;
        // Any non-blocked, authenticated user can delete (claim) a campaign.
        allow delete: if isNotBlocked();
    }

    // --- Purchase Verification Rules ---
    match /purchase_verifications/{verificationId} {
        // Non-blocked, authenticated users can create their own verification requests
        allow create: if isNotBlocked() && request.resource.data.userId == request.auth.uid;
        
        // The unauthenticated bot can read and update
        allow get, update: if request.auth == null;
    }

    // --- Stats Rules ---
    match /stats/{statId} {
      // Any non-blocked, authenticated user can read stats
      allow read: if isNotBlocked();
      // Allow the client to increment the user count upon sign-up.
      allow create, update: if request.auth != null;
    }

    // --- Chat Rules ---
    match /messages/{messageId} {
        // Any authenticated user can read the chat history
        allow list, get: if request.auth != null;
        // Any non-blocked, authenticated user can send a message, but they must be the author
        allow create: if isNotBlocked() && request.auth.uid == request.resource.data.userId;
    }
  }
}
