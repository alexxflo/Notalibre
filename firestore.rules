rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. PUBLICACIONES (POSTS): Cualquiera logueado puede verlas, solo el autor crea/edita
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.authorId == request.auth.uid || resource.data.userId == request.auth.uid);
    }
    
    // 2. USUARIOS Y SUS SUB-COLECCIONES
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Notificaciones, Mensajes internos y Seguidores
      match /notifications/{id} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /messages/{id} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /followers/{id} { allow read, write: if request.auth != null; }
      match /following/{id} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }

    // REGLAS PARA CHATS
    match /chats/{chatId} {
      // Permite leer si el usuario es parte del chat
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participantIds;
      
      // PERMITE CREAR: Vital para el primer mensaje
      // Permite la creación si el usuario que envía está logueado
      allow create: if request.auth != null;

      // PERMITE ACTUALIZAR: Para añadir mensajes o cambiar el 'lastMessage'
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participantIds;

      // MENSAJES DENTRO DEL CHAT
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
